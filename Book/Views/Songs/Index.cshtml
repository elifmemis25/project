<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">Sarki Listesi</h2>
    </div>

    <div class="col-3">
        <a asp-action="Create" class="btn btn-info form-control text-white">Şarkı Oluştur</a>
    </div>

    <div class="col-3">
        <a asp-action="Edit" class="btn btn-info form-control text-white">Şarkı Oluştur(GuncelleEkle)</a>
    </div>

    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>

                            <label asp-for="@Model.FirstOrDefault().SarkiAd"></label>
                        </th>

                        <th>


                            @*@Html.DisplayNameFor(a => a.Songs.FirstOrDefault().Sarkici)*@

                            <label asp-for="@Model.FirstOrDefault().Sarkici"></label>
                        </th>

                        <th>

                            <label asp-for="@Model.FirstOrDefault().Album"></label>
                        </th>

                        <th>İŞLEMLER</th>


                    </tr>








                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(a => item.SarkiAd)
                            </td>

                            <td>

                                @Html.DisplayFor(a => item.Sarkici)
                            </td>

                            <td>

                                @Html.DisplayFor(a => item.Album)
                            </td>

                            <td>


                                <button asp-action="Delete" asp-route-id="@item.Id"
                                        onclick="return confirm('İlgili veriyi silmek istediğinize emin misiniz?')"
                                        class="btn btn-danger btn-sm">
                                    Sil
                                </button>
                                <a asp-action="Edit" asp-route-id="@item.Id"
                                   class="btn btn-success btn-sm text-white">Düzenle</a>
                            </td>
                        </tr>

                    }

                </table>
            }
            else
            {
                <p>Listelenecek şarkı bulunamadı...</p>
            }
        </form>
    </div>

    <div>
        class="col-12" style="text-align:center">
        <br />
        <span class="h3 text-info">2. Gösterim Alanı</span>
        <br />
        <br />
    </div>

    <div class="col-12 border p-3">
        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">

            <thead>
                <tr>
                    <th>
                        Şarkı Adı
                    </th>
                    <th>
                        Şarkıcı Adı
                    </th>
                    <th>
                        Albüm
                    </th>
                    <th>
                        İşlemler
                    </th>
                </tr>

            </thead>

        </table>
    </div>

</div>

