@page
@model Book.Pages.SarkiListesi.DuzenleModel

<br />
<h2 class="text-info">Şarkı Bilgileri Düzenle</h2> 
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <input type="hidden" asp-for="Song.Id" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Song.SarkiAd"></label>
            </div>
            <div class="col-6">
                <input asp-for="Song.SarkiAd" class="form-control">
            </div>
            <span asp-validation-for="Song.SarkiAd" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Song.Sarkici"></label>
            </div>
            <div class="col-6">
                <input asp-for="Song.Sarkici" class="form-control">
            </div>
            <span asp-validation-for="Song.Sarkici" class="text-danger"></span>
        </div>


        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Song.Album"></label>
            </div>
            <div class="col-6">
                <input asp-for="Song.Album" class="form-control">
            </div>
            <span asp-validation-for="Song.Album" class="text-danger"></span>

        </div>




        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Güncelle" class="btn btn-primary form-control"> 
            </div>

            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Şarkı Listesine Geri Dön</a>
            </div>
        </div>

    </form>



</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
